# Elasticsearch Configuration
ES_HOST=http://10.9.56.10:30200
ES_USER=
ES_PASS=
ES_CLOUD_ID=
ES_API_KEY=
ES_VERIFY_CERTS=true
ES_TIMEOUT=20
ES_ALERTS_INDEX=spharaka-alerts-*
