# Threat Intelligence
THREAT_INTEL_ENABLED=true
THREAT_INTEL_CACHE_TTL=3600
MALICIOUS_IP_THRESHOLD=3
SUSPICIOUS_USER_THRESHOLD=5

# Alerting Rules
ALERT_MULTIPLE_FAILED_LOGINS=true
ALERT_MULTIPLE_FAILED_LOGINS_COUNT=5
ALERT_MULTIPLE_FAILED_LOGINS_WINDOW=300
ALERT_PRIVILEGE_ESCALATION=true
ALERT_SUSPICIOUS_PROCESS=true
ALERT_LATERAL_MOVEMENT=true
ALERT_DATA_EXFILTRATION=true

# Master Agent Routing Configuration
ROUTING_MODE=dynamic_scores
ROUTING_TOP_K=3
ROUTING_TIE_BREAKER_MIN_GAP=0.15

# Agent Selection Thresholds
THRESHOLD_USER_MIN=0.70
THRESHOLD_IP_MIN=0.72
THRESHOLD_TIMELINE_MIN=0.60
THRESHOLD_HISTORY_MIN=0.62

# Dynamic Routing Context Weights
ROUTING_WEIGHT_USERNAME_KEYWORDS=0.3
ROUTING_WEIGHT_IP_KEYWORDS=0.25
ROUTING_WEIGHT_TEMPORAL_KEYWORDS=0.2
ROUTING_WEIGHT_HISTORICAL_KEYWORDS=0.25

# Semantic Score Boosters
SEMANTIC_BOOST_AUTH_USER=0.15
SEMANTIC_BOOST_NETWORK_IP=0.15
SEMANTIC_BOOST_TIMELINE_SEQUENCE=0.1
SEMANTIC_BOOST_HISTORY_PATTERN=0.1

# Context Signal Detection
CONTEXT_USER_SIGNALS=["user","username","account","login","credential","authentication","identity"]
CONTEXT_IP_SIGNALS=["ip","address","network","connection","traffic","firewall","source","destination"]
CONTEXT_TEMPORAL_SIGNALS=["time","timeline","sequence","chronological","order","before","after","duration"]
CONTEXT_HISTORICAL_SIGNALS=["history","pattern","previous","recurring","trend","baseline","normal"]

# GPU Acceleration Configuration
# Set to 1 to force CPU usage (disable GPU)
FORCE_CPU=0
# CUDA device ID to use (default: 0)
CUDA_DEVICE=0
# Enable Automatic Mixed Precision for faster training/inference
ENABLE_AMP=True
