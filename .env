TIMELINE_MAX_EVENTS=1000
ALERT_HISTORY_LOOKBACK_DAYS=30
SUMMARY_MIN_AGENTS_REQUIRED=3

# Time Windows (in hours)
TIMELINE_DEFAULT_WINDOW=24
TIMELINE_EXTENDED_WINDOW=168
ALERT_HISTORY_SHORT_WINDOW=24
ALERT_HISTORY_LONG_WINDOW=720

# Query Configuration
QUERY_MAX_SIZE=10000
QUERY_DEFAULT_SIZE=100
QUERY_SCROLL_SIZE=1000
QUERY_SCROLL_TIMEOUT=5m

# Event ID Mappings
WINDOWS_LOGIN_EVENT_IDS=[4624,4625,4648]
WINDOWS_LOGOUT_EVENT_IDS=[4634,4647]
